# HiBid Scraper Configuration
# Copy this file to .env and update with your values

# Required: Your zip code for location-based search
ZIP_CODE=78414

# Search radius in miles (options: 10, 25, 50, 100, 250, 500)
RADIUS_MILES=50

# Test mode: limit to 20 items for testing (true/false)
TEST_MODE=false

# Database settings
# For SQLite (default):
DATABASE_URL=sqlite:///hibid_auctions.db

# For PostgreSQL (uncomment and configure when ready):
# DATABASE_URL=postgresql://user:password@localhost:5432/hibid_auctions

# Rate limiting: delay between requests in seconds (min, max)
REQUEST_DELAY_MIN=2
REQUEST_DELAY_MAX=5

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Search categories (comma-separated, leave empty for all open lots)
# Examples: cars,trucks,coins---currency,antiques
SEARCH_CATEGORIES=
